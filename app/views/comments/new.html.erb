<div class="bg-white rounded-lg p-4 mt-4">
    <%= form_with model: @comment, url: user_post_comments_path, data: { turbo: false } do |form| %>
      <div class="mb-4">
        <%= form.label :text, class: "block text-gray-700 font-medium mb-2" %>
        <%= form.text_area :text, class: "w-full h-32 border border-gray-400 p-2 rounded-lg" %>
      </div>
      <div class="text-center">
        <%= form.submit "Create Comment", class: "bg-gradient-to-tr from-[#3FBFED] via-[#35A5E5] to-[#319AE0] text-white py-2 px-4 rounded-lg hover:bg-blue-800 cursor-pointer" %>
      </div>
    <% end %>
</div>