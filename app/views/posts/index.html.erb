<div class="flex flex-col">
<div class="bg-white p-6 rounded-lg shadow-md hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
  <div class="flex items-center mb-6">
    <% if @user.photo? %>
        <%= cl_image_tag @user.photo, class: "h-12 w-12 rounded-full object-cover" %>
    <% else %>
        <%= image_tag "https://avatars.dicebear.com/api/adventurer/4.svg", class: "h-48 w-48 rounded-full object-cover" %>
    <% end %>
    <div class="ml-4">
      <h2 class="text-4xl font-medium text-gray-900 dark:text-white"><%= @user.name %></h2>
      <p class="text-2xl text-gray-600 dark:text-white"><%= @user.bio %></p>
      <p class="text-2xl text-gray-600 dark:text-white">Joined <%= time_ago_in_words(@user.created_at) %> ago</p>
      <p class="text-2xl text-gray-600 dark:text-white">Number of posts: <%= @user.posts_counter - 1 %></p>
    </div>
  </div>
</div>
<h3 class="text-lg font-medium text-gray-800 mt-4">Posts</h3>
<div class="flex flex-col">
<div class="bg-white p-6 rounded-lg shadow-md hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
<% @user.posts.each do |post| %>
  <div class="mb-4">
    <a href="<%= user_post_path(@user, post) %>" class="text-lg font-medium text-blue-600 hover:underline">
      <%= post.title %>
    </a>
    <p class="text-gray-600 dark:text-white">
      lorem ipsum dolor sit amet
    </p>
    <p class="text-gray-600 dark:text-white">
      <%= time_ago_in_words(post.created_at) %> ago
    </p>
    <div class="flex justify-end gap-5 items-end mt-2 dark:text-white">
    <p>Comments:<%= post.comments_counter %></p>
    <p>Likes: <%= post.likes_counter %></p>
    </div>
      <% if post.comments.empty? %>
  <p class="text-white my-8">There are no comments for this post.</p>
<% else %>
  <% @comments.each do |comment| %>
    <div class="bg-white rounded-lg p-4">
      <p class="text-gray-700 font-medium"><%= post.comment.text %></p>
      <p class="text-gray-500 font-medium">by <%= post.comment.author %></p>
    </div>
  <% end %>
<% end %> 
  </div>
<% end %>
</div>
</div>
</div>