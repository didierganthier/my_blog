<div class="flex flex-col">
<div class="bg-white p-6 rounded-lg shadow-md hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
  <div class="flex items-center mb-6">
    <% if @user.photo? %>
        <%= image_tag @user.photo, class: "h-48 w-48 rounded-full object-cover" %>
    <% else %>
        <%= image_tag "https://avatars.dicebear.com/api/adventurer/4.svg", class: "h-48 w-48 rounded-full object-cover" %>
    <% end %>
    <div class="ml-4 flex flex-col gap-4">
      <h2 class="text-4xl font-medium text-gray-900 dark:text-white"><%= @user.name %></h2>
      <p class="text-2xl text-gray-600 dark:text-white"><%= @user.bio %></p>
      <p class="text-lg text-gray-600 dark:text-white">Joined <%= time_ago_in_words(@user.created_at) %> ago</p>
      <p class="text-lg text-gray-600 dark:text-white">Number of posts: <%= @user.posts_counter - 1 %></p>
    </div>
  </div>
</div>
<h3 class="text-lg font-medium text-gray-800 mt-4">Recent Posts</h3>
<div class="flex flex-col">
<div class="bg-white p-6 rounded-lg shadow-md hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
<% @user.posts.first(3).each do |post| %>
  <div class="mb-4">
    <a href="<%= user_post_path(@user, post) %>" class="text-lg font-medium text-blue-600 hover:underline">
      <%= post.title %>
    </a>
    <p class="text-gray-600 dark:text-white">
      <%= post.text %>
    </p>
    <p class="text-gray-600 dark:text-white">
      <%= time_ago_in_words(post.created_at) %> ago
    </p>
    <div class="flex justify-end gap-5 items-end mt-2 dark:text-white">
    <p>Comments:<%= post.comments_counter %></p>
    <p>Likes: <%= post.likes_counter %></p>
    </div>
  </div>
<% end %>
</div>
</div>
  <%= link_to user_posts_path(@user) do %>
    <div class="flex justify-center mt-4">
      <button class="bg-blue-500 text-white px-4 py-2 rounded font-medium hover:bg-blue-600">See All Posts</button>
    </div>
    <% end %>
</div>