<h2 class="text-lg font-semibold">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="my-4">
    <%= f.label :name, class: "block text-sm font-medium mb-2" %>
    <%= f.text_field :name, class: "w-full p-2 border border-gray-400 rounded" %>
  </div>
  <div class="my-4">
    <%= f.label :email, class: "block text-sm font-medium mb-2" %>
    <%= f.email_field :email, class: "w-full p-2 border border-gray-400 rounded", autofocus: true, autocomplete: "email" %>
  </div>
  <div class="my-4">
    <%= f.label :password, class: "block text-sm font-medium mb-2" %>
    <% if @minimum_password_length %>
    <em class="text-xs font-normal text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, class: "w-full p-2 border border-gray-400 rounded", autocomplete: "new-password" %>
  </div>
  <div class="my-4">
    <%= f.label :password_confirmation, class: "block text-sm font-medium mb-2" %>
    <%= f.password_field :password_confirmation, class: "w-full p-2 border border-gray-400 rounded", autocomplete: "new-password" %>
  </div>
  <div class="my-4">
    <%= f.submit "Sign up", class: "bg-blue-500 text-white py-2 px-4 hover:bg-blue-600 rounded" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
